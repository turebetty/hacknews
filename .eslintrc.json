{
  "env": {
      "browser": true,
      "es6": true,
      "node": true
  },
  "extends": [
      "eslint:recommended",   //http://eslint.cn/
      "plugin:react/recommended" //https://github.com/yannickcr/eslint-plugin-react/
  ],
  "parser": "babel-eslint",
  "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "jsx": true,
          "modules": true
      }
  },
  "plugins": [
      "react"
  ],
  "rules": {
      //不需要
      "semi": 0,
      "eol-last": 0,
      "global-require": 0,
      "import/no-unresolved": 0,
      "no-global-assign": 0,
      "no-unsafe-negation": 0,
      "no-return-assign": 0,
      "no-param-reassign": 0,
      "no-console": 0,
      "no-extra-boolean-cast": 0,
      "no-cond-assign": 0,
      //react
      "react/no-string-refs": 0,
      "react/prop-types": 0,
      "react/no-unescaped-entities": 0,
      "react/jsx-no-duplicate-props": 0,
      // 警告
      "dot-notation": 1,
      "no-debugger": 1,
      //语法
      "no-unused-expressions": 1,
      "no-undef": 1,
      "no-unused-vars": 1,
      //错误
      //代码风格
      "indent": ["error",2],
      "quotes": ["error","single"],
      "comma-spacing": [2, {
          "before": false,
          "after": true
      }],
      // react
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2
  }
}